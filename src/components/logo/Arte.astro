---
import { Image } from "astro:assets";
import src from "./arte.svg";

interface Props {
	width?: number;
	height?: number;
}

const { width = 80, height = 80 } = Astro.props;
---

<Image
    src={src}
    alt=""
    width={width}
    height={height}
    class="channel-cover--arte"
/>

<style>
@media (prefers-color-scheme: dark) {
  .channel-cover--arte {
    filter: grayscale(20%) saturate(80%);
  }
}
</style>
