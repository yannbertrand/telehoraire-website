---
import { Image } from "astro:assets";
import src from "./cnews.svg";

interface Props {
	width?: number;
	height?: number;
}

const { width = 80, height = 80 } = Astro.props;
---

  <Image
    src={src}
    alt=""
    width={width}
    height={height}
    class="channel-cover--cnews"
  />

<style>
@media (prefers-color-scheme: dark) {
  .channel-cover--cnews {
    filter: saturate(90%) brightness(80%);
  }
}
</style>
