---
import { Image } from "astro:assets";
import src from "./lcp.svg";

interface Props {
	width?: number;
	height?: number;
}

const { width = 80, height = 80 } = Astro.props;
---


  <Image
    src={src}
    alt=""
    width={width}
    height={height}
    class="channel-cover--lcp"
  />


<style>
@media (prefers-color-scheme: dark) {
  .channel-cover--lcp {
    filter: invert(100%) brightness(80%);
  }
}
</style>
