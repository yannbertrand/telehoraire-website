---
import { Image } from "astro:assets";
import src from "./m6.svg";

interface Props {
	width?: number;
	height?: number;
}

const { width = 80, height = 80 } = Astro.props;
---


  <Image
    src={src}
    alt=""
    width={width}
    height={height}
    class="channel-cover--m6"
  />


<style>
@media (prefers-color-scheme: dark) {
  .channel-cover--m6 {
    filter: grayscale(20%) saturate(80%) brightness(80%);
  }
}
</style>
