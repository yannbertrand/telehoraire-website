---
import { Image } from "astro:assets";
import src from "./canal-plus.svg";

interface Props {
	width?: number;
	height?: number;
}

const { width = 80, height = 80 } = Astro.props;
---

  <Image
    src={src}
    alt=""
    width={width}
    height={height}
    class="channel-cover--canal-plus"
  />

<style>
@media (prefers-color-scheme: dark) {
  .channel-cover--canal-plus {
    filter: grayscale(20%) brightness(80%);
  }
}
</style>
