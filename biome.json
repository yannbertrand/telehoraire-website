{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!.astro", "!**/dist"]
	},
	"overrides": [
		{
			"includes": ["**/*.astro"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					},
					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedImports": "off"
					}
				}
			}
		}
	]
}
